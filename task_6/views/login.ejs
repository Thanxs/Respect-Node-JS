<div class="login">
      <div class="login-wrap">
        <h1 class="login-title"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <div class="errors">        
          <% if(typeof errors != 'undefined') { %>            
              <% errors.forEach(function(err) { %>
                <div>
                  <%= err.msg %>
                </div>
              <% }); %>            
            <% } %>
        </div>
        <div class='success'>
          <% if(success_msg != '') { %>
            <%= success_msg %>
          <% } %>
        </div>
        <div class='warning'>
          <% if(error_msg != '') { %>
            <%= error_msg %>
          <% } %>
        </div>
        <div class='warning'>
          <% if(error != '') { %>
            <%= error %>
          <% } %>
        </div>
        <form action="/auth/login" method="POST">
          <div class="input-field col s6">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="validate"
            />
          </div>
          <div class="input-field col s6">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="validate"
            />
          </div>
          <button type="submit" class="btn btn-block .btn-login">Login</button>
        </form>
        <p>
          No Account? <a class="login-redirect" href="/users/register">Register</a>
        </p>
      </div>
  </div>